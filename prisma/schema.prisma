generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model SignUp {
  id        Int      @id @default(autoincrement())
  email     String  @unique
  firstName  String
  lastName  String
  phone     String @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  questions  Questionnaire[]
  followUps  FollowUp[]
  reviews  Review[]

}

model Questionnaire{
  id       Int      @id @default(autoincrement())
  gender   String
  ageRange String
  district String
  educationLevel String
  breastCondition String
  knowSomeoneWithBreastCondition String
  yourMotivation String
  createdAt DateTime @default(now())
  signUp   SignUp   @relation(fields: [signUpId], references: [id])
  signUpId Int
}

model SelfCheck {
  id       Int      @id @default(autoincrement())
  title    String
  description String
  imageUrl String
}

model FollowUp{
  id       Int      @id @default(autoincrement())
  swellingOnLeftOrone String
  unUsualDischarge String
  hardSpotOnBreast String
  lastPeriodDate String
  daysPeriodLasted String
  signUp   SignUp   @relation(fields: [signUpId], references: [id])
  signUpId Int
}

model BreastVideo {
  id        Int      @id @default(autoincrement())
  title     String
  description String
  url  String
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  imageUrl String?
  link  String
}

model HealthTip {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  imageUrl String?
}

model Review {
  id        Int      @id @default(autoincrement())
  signUp   SignUp   @relation(fields: [signUpId], references: [id])
  signUpId Int
  review String
}

model Faq {
  id        Int      @id @default(autoincrement())
  wearingAbra     String
  doMenGetCancer String
  antisperspirants String
  braWithUnderwire String
  breastCancerCauses String
  findingAlump String
  breastCancerSymptoms String
}

